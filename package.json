{
  "name": "@herbsjs/herbs-cli",
  "version": "1.7.1",
  "description": "herbs CLI",
  "bin": {
    "herbs": "bin/herbs"
  },
  "scripts": {
    "format": "prettier --write **/*.{js,json} && standard --fix",
    "lint": "npx eslint \"**/*.{js,jsx}\" --quiet",
    "lint:fix": "npx eslint \"**/*.{js,jsx}\" --fix",
    "test": "mocha __tests__ --timeout 90000",
    "watch": "jest --watch",
    "snapupdate": "jest --updateSnapshot",
    "coverage": "jest --coverage",
    "semantic-release": "semantic-release",
    "commit": "npm run lint && cz"
  },
  "files": [
    "src",
    "LICENSE",
    "readme.md",
    "docs",
    "bin"
  ],
  "license": "MIT",
  "dependencies": {
    "-": "0.0.1",
    "@herbsjs/herbs": "^1.2.0",
    "D": "^1.0.0",
    "fs-extra": "^10.0.0",
    "glob": "^7.1.7",
    "gluegun": "^4.6.1",
    "inquirer": "^8.1.1",
    "lodash.camelcase": "^4.3.0",
    "lodash.startcase": "^4.4.0"
  },
  "devDependencies": {
    "@semantic-release/changelog": "^5.0.1",
    "@semantic-release/commit-analyzer": "^8.0.1",
    "@semantic-release/git": "^9.0.0",
    "@semantic-release/github": "^7.2.3",
    "@semantic-release/npm": "^7.1.3",
    "@semantic-release/release-notes-generator": "^9.0.3",
    "chai": "^4.3.4",
    "cz-conventional-changelog": "^3.3.0",
    "eslint": "^7.32.0",
    "mocha": "^9.0.1",
    "nyc": "^15.1.0",
    "prettier": "^2.3.2",
    "semantic-release": "^17.4.4",
    "babel-eslint": "^10.1.0",
    "eslint-config-prettier": "^8.3.0",
    "eslint-plugin-import": "^2.23.4",
    "eslint-plugin-prettier": "^3.4.0"
  },
  "prettier": {
    "semi": false,
    "singleQuote": true
  },
  "standard": {
    "ignore": [
      "__tests__/*"
    ]
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/herbsjs/herbs-cli"
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  },
  "publishConfig": {
    "access": "public"
  }
}
